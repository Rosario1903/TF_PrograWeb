package pe.edu.upc.serviceimpl;
import java.util.List;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import pe.edu.upc.entity.Local;
import pe.edu.upc.repository.LocalRepository;
import pe.edu.upc.serviceinterface.ILocalService;

@Service
public class LocalServiceImpl implements ILocalService{
	@Autowired
	private LocalRepository lR;
	
	@Transactional
	@Override
	public void insert(Local loc) {
		
		try {
			lR.save(loc);
		} catch (Exception e) {
			System.out.println("Error en el serviceImpl Local");
		}
	}

	@Override
	public List<Local> list() {
		// TODO Auto-generated method stub
		return lR.findAll();
	}

}
